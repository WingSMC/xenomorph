{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "xenomorph",
    "patterns": [{ "include": "#keywords" }, { "include": "#strings" }],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.xenomorph",
                    "match": "\\b(type|validator|set|enum|+|-|<>|not)\\b"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.xenomorph",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.xenomorph",
                    "match": "\\\\."
                }
            ]
        }
    },
    "scopeName": "source.xenomorph"
}
